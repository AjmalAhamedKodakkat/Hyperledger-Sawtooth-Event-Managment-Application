<!-- Event Registration Page -->


<center>
  <h3> Event Registation </h3>
  <img src="/images/index54.png" height="75px">
  <div class="row">
    <div style="float:right; margin-right:50px;">
      <a href="/delete">
        <button type="button" style="background-color: #ff0000" class="waves-effect waves-light btn-small">Delete
          Event Details</button>
      </a><br><br>
      <a href="/transactionID">
        <button type="button" style="background-color: #0066ff" class="waves-effect waves-light btn-small">Latest
          Transaction ID</button>
      </a><br><br>


      <a href="/transactionReceipts">
        <button type="button" style="background-color: #0066ff" class="waves-effect waves-light btn-small">Transaction
          Receipts</button>
      </a>
    </div>
    <div class="col s6 offset-s3"
      style="background-color: rgb(240, 232, 232); opacity: 1.0; height: 550px; padding: 20px 20px; border: 1px solid; overflow: scroll; overflow-x: hidden; overflow-y: scroll;">
      <form autocomplete="off">
        <div>
          <br>
          <label style="font-size:16px; float:left; color:black;">Enter Private Key</label>
          <input type="text" id="private1" required>
          <label style="font-size:16px; float:left; color:black;">Enter Event Name</label>
          <input type="text" id="name1" required>
          <label style="font-size:16px; float:left; color:black;">Enter Event Date</label>
          <input type="date" id="date1" required>
          <label style="font-size:16px; float:left; color:black;">Enter Event Location</label>
          <input type="text" id="location1" required>
          <label style="font-size:16px; float:left; color:black;">Enter Details</label>
          <input type="text" id="info1" required>
          </div>
        <div>
          <br />
          <button type="submit" onclick="registration(event)" style="background-color: #0066ff"
            class="waves-effect waves-light btn-small">Submit</button>
          <br>
          <button type="reset" style="float: right; background-color: #ff0000"
            class="waves-effect waves-light btn-small">Clear</button>
        </div>
      </form>
    </div>
  </div>
</center>

<script src="/javascripts/main.js"></script>